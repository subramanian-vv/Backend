<%- include('./partials/messages.ejs'); %>
<%- include('./partials/nav.ejs'); %>

<h1 class="mb-3 mt-4 text-center">Welcome to your articles, <%= name %> !</h1>

<% articles.forEach(function (article) { %>

    <div class="card mt-4">
      <h3 class="card-header">
        <%= article.title %>
      </h3>
        <div class="card-body">
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdDate.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2"><%= article.description %></div>
          <a href="/user/articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
          <a href="/user/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
          <form action="/user/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>

<% }) %>